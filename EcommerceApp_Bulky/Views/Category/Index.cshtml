@using Ecommerce_Bulky.Models.Dtos;
@model IEnumerable<CategoryDto>

<div>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-patch-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <br />


    <table class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Display Order</th>
                <th width="10%">Update</th>
                <th width="10%">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Name</td>
                    <td>@m.DiplayOrder</td>
                    <td width="10%">
                        <a asp-action="Update" class="btn btn-primary" asp-route-id="@m.Id">
                            <i class="bi bi-pencil-square"></i> &nbsp; Update
                            </a>
                    </td>
                    <td width="10%">
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@m.Id">
                           <i class="bi bi-trash3-fill"></i> &nbsp; Delete
                            </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
